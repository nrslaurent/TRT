{% extends 'base.html.twig' %}

{% block title %}Jobs{% endblock %}

{% block body %}
    <h1>Jobs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ job.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ job.description }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ job.address }}</td>
            </tr>
            <tr>
                <th>Hours</th>
                <td>{{ job.hours }}</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>{{ job.salary }}</td>
            </tr>
            <tr>
                <th>Validated</th>
                <td>{{ job.validated ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ job.published ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('jobs_index') }}">back to list</a>

    <a href="{{ path('jobs_edit', {'id': job.id}) }}">edit</a>

    {{ include('jobs/_delete_form.html.twig') }}
{% endblock %}
