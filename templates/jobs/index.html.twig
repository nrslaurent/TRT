{% extends 'base.html.twig' %}

{% block title %}Jobs index{% endblock %}

{% block body %}
    <h1>Les offres d'emplois que vous avez ajoutées</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Adresse</th>
                <th>Horaires</th>
                <th>Salaire</th>
                <th>Validée?</th>
                <th>Publiée?</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.title }}</td>
                <td>{{ job.description }}</td>
                <td>{{ job.address }}</td>
                <td>{{ job.hours }}</td>
                <td>{{ job.salary }}</td>
                <td>{{ job.validated ? 'Yes' : 'No' }}</td>
                <td>{{ job.published ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('jobs_edit', {'id': job.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
