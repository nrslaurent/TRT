{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}

    <table class="d-flex table table-borderless  mt-5">
        <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ user.lastname }}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ user.firstname }}</td>
        </tr>
            <tr>
                <th>Adresse email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('users_edit', {'id': user.id}) }}">Mettre à jour ou supprimer mon compte</a>

{% endblock %}
